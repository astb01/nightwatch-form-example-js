                                td
                                    input.form-control.form-elem(type='text', name='illness3Treatment', id='illness3-treatment', value=form.illness3Treatment)
                                td
                                    input.form-control.form-elem(type='text', name='illness3Dosage', id='illness3-dosage', value=form.illness3Dosage)
                            tr
