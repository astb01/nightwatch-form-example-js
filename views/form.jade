                                td
                                    input.form-control.form-elem(type='text', name='illness2Duration', id='illness2-duration', , value=form.illness2Duration)
                                td
                                    input.form-control.form-elem(type='text', name='illness2Treatment', id='illness2-treatment', value=form.illness2Treatment)
                                td
